    "app/**/page.tsx",
    "app/**/layout.tsx",
    "app/api/**/route.ts",
    "sanity.config.ts",
    "sanity.cli.ts"
  ],
  "project": ["**/*.{ts,tsx}"],
  "ignore": [
    "**/*.d.ts",
